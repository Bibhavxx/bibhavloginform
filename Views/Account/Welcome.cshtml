@{
    ViewBag.Title = "Welcome";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Welcome</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f1f7fd;
            font-family: 'Segoe UI', sans-serif;
        }

        .welcome-box {
            margin-top: 100px;
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .emoji {
            font-size: 50px;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center">
        <div class="welcome-box text-center">
            <div class="emoji">🎉</div>
            <h2 class="text-success">Login Successful!</h2>
            <p class="lead">Welcome, <strong>@ViewBag.Username</strong> 👋</p>
            <a href="/" class="btn btn-primary mt-3">Go to Home</a>
        </div>
    </div>
</body>
</html>
